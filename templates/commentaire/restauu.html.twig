<section style="background-color: #eee;">
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="" alt="avatar" width="60"
                                 height="60" />
                            <div>
                                <h6 class="fw-bold text-primary mb-1">cultun</h6>
                                <p class="text-muted small mb-0">

                                </p>
                            </div>
                        </div>

                        <p class="mt-3 mb-4 pb-2">
                            <img height="300" width="700" src=" {{asset(image)}}">
                        </p>
                        <table>
                            {% for i in tab %}


                             <tr>

                                 <tr>
                                <td>
                                    {{ nom }}
                                    {{ prenom }}
                                </td>
                               </tr>

                                <td>
                                     {{ i.contenuCommentaireR }}



                                 </td>

                                  <tr>

                                      <td>
                                          <a href="{{path('suppcomm',{'id':i.id})}}" class="d-flex align-items-center me-3">
                                              <i class="far fa-comment-dots me-2"></i>
                                              <p class="mb-0">supprimer</p>
                                          </a>
                                      </td>





                                  </tr>



                                </tr>





                            {% endfor %}
                        </table>





                    </div>
                    <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;" id="modif">
                        {{ form_start(form) }}
                        <div class="d-flex flex-start w-100">
                            <div class="form-outline w-100">

                                {{form_row(form.contenuCommentaireR,{'attr':{'class':'form-control'}})}}
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-fill-out">Commenter</button>



                                </div>
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>