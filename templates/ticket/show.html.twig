{% extends 'baseBack.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
<div class="container d-flex flex-column align-items-center">
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Packet</th>
                <td>{{ ticket.packet }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ ticket.prix }}</td>
            </tr>
            <tr>
                <th>Event_id</th>
                <td>{{ ticket.eventId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}" class="btn btn-fill-out btn-block">back to list</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-fill-out btn-block">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
</div>
{% endblock %}
