{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<div class="container d-flex flex-column align-items-center">
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <td><img src ="{{ asset('uploads/images/' ~ evenement.image) }}"
                     alt ="" style = "width: auto; height: auto">
                </td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom_event</th>
                <td>{{ evenement.nomEvent }}</td>
            </tr>
            <tr>
                <th>Nbr_participant</th>
                <td>{{ evenement.nbrParticipant }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
           
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ evenement.theme }}</td>
            </tr>

        </tbody>
    </table>
 <h4>
        <iframe style="border:0; width: 100%; height: 350px;" class="img-fluid" src="https://maps.google.com/maps?q=+
{{ evenement.emplacement }}+&hl=fr&z=14&amp;output=embed" frameborder="0" allowfullscreen>

        </iframe></h4>


    <a href="{{ path('app_evenement_index') }}">back to list</a>

    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a>
    <a href="{{ path('listp', {'id': evenement.id}) }}">Telecharger comme PDF</a>
    {{ include('evenement/_delete_form.html.twig') }}
</div>
{% endblock %}
